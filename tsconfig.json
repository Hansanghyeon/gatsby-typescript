{
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}